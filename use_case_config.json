{
  "import": {
    "default_missing_value": "Not specified",
    "fields": {
      "title": {
        "column": "Use Case Name",
        "required": true,
        "default": "Untitled use case"
      },
      "industry": {
        "column": "Business Sector",
        "default": "Not specified",
        "label": "Business sector"
      },
      "requestor": {
        "default": "Not specified",
        "label": "Use case owner / requestor"
      },
      "summary": {
        "column": "Description",
        "default": "Not specified",
        "label": "Description"
      },
      "problem": {
        "column": "ProblemStatement",
        "default": "Not specified",
        "label": "Problem statement"
      },
      "solution": {
        "column": "SolutionDescription",
        "default": "Not specified",
        "label": "Solution description"
      },
      "impact": {
        "column": "Business Value Estimate (Numerical)",
        "default": "0",
        "label": "Business value estimate"
      },
      "data_source": {
        "column": "Source Stage",
        "default": "Not specified",
        "label": "Source stage"
      },
      "status_color": {
        "column": "New Type of Business Benefit",
        "default": "Not specified",
        "label": "Business benefit type"
      },
      "tags": {
        "column": "New Domain Mapping for G Level",
        "default": "",
        "label": "Domain mapping"
      }
    }
  },
  "access_control": {
    "roles": {
      "admin": {
        "visible_fields": [
          "*"
        ]
      },
      "reader": {
        "visible_fields": [
          "title",
          "industry",
          "summary",
          "problem",
          "solution",
          "data_source",
          "status_color"
        ]
      }
    },
    "ownership": {
      "full_access": true,
      "additional_fields": []
    }
  },
  "visualizations": {
    "filters": [
      {
        "id": "business-sector",
        "field": "industry",
        "label": "Business sector",
        "type": "select",
        "allowed_roles": ["admin", "reader"],
        "empty_label": "All sectors",
        "missing_label": "Not specified"
      },
      {
        "id": "benefit-type",
        "field": "status_color",
        "label": "Business benefit type",
        "type": "select",
        "allowed_roles": ["admin", "reader"],
        "empty_label": "All benefit types",
        "missing_label": "Not specified"
      },
      {
        "id": "business-value",
        "field": "impact",
        "label": "Business value",
        "type": "range",
        "allowed_roles": ["admin"],
        "placeholder_min": "Min value",
        "placeholder_max": "Max value",
        "unit": "Estimated value"
      }
    ],
    "graphs": [
      {
        "id": "use-cases-by-sector",
        "title": "Use cases by business sector",
        "description": "Count of use cases per business sector.",
        "type": "donut",
        "group_by": "industry",
        "metric": {
          "operation": "count",
          "label": "Use case count"
        },
        "allowed_roles": [
          "admin",
          "reader"
        ],
        "missing_label": "Not specified"
      },
      {
        "id": "use-cases-by-benefit-type",
        "title": "Use cases by business benefit type",
        "description": "How many initiatives sit in each business benefit classification.",
        "type": "bar",
        "group_by": "status_color",
        "metric": {
          "operation": "count",
          "label": "Use case count"
        },
        "allowed_roles": [
          "admin",
          "reader"
        ],
        "missing_label": "Not specified",
        "chart_options": {
          "scales": {
            "y": {
              "beginAtZero": true
            }
          }
        }
      },
      {
        "id": "benefit-by-sector",
        "title": "Business value by sector",
        "description": "Sum of estimated business value, grouped by business sector.",
        "type": "bar",
        "group_by": "industry",
        "metric": {
          "operation": "sum",
          "field": "impact",
          "label": "Business value"
        },
        "allowed_roles": [
          "admin"
        ],
        "missing_label": "Not specified",
        "chart_options": {
          "scales": {
            "y": {
              "beginAtZero": true
            }
          }
        }
      }
    ]
  }
}
