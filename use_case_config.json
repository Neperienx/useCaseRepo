{
  "import": {
    "default_missing_value": "Undefined",
    "fields": {
      "title": {
        "column": "Title",
        "required": true,
        "default": "Undefined"
      },
      "industry": {
        "column": "Industry",
        "default": "Undefined"
      },
      "summary": {
        "column": "Summary",
        "default": "Undefined"
      },
      "problem": {
        "column": "Problem",
        "default": "Undefined"
      },
      "solution": {
        "column": "Solution",
        "default": "Undefined"
      },
      "impact": {
        "column": "Impact",
        "default": "Undefined"
      },
      "data_source": {
        "column": "Data Source",
        "default": "Undefined"
      },
      "tags": {
        "column": "Tags",
        "default": "Undefined"
      }
    }
  },
  "access_control": {
    "roles": {
      "admin": {
        "visible_fields": ["*"]
      },
      "reader": {
        "visible_fields": [
          "title",
          "industry",
          "summary",
          "problem",
          "solution",
          "tags"
        ]
      }
    },
    "ownership": {
      "full_access": true,
      "additional_fields": []
    }
  },
  "visualizations": {
    "graphs": [
      {
        "id": "use-cases-by-industry",
        "title": "Use cases by industry",
        "description": "Count of use cases per industry category.",
        "type": "donut",
        "group_by": "industry",
        "metric": {
          "operation": "count",
          "label": "Use case count"
        },
        "allowed_roles": ["admin", "reader"],
        "missing_label": "Undefined"
      },
      {
        "id": "impact-by-industry",
        "title": "Total impact by industry",
        "description": "Aggregate impact values (sum) grouped by industry.",
        "type": "bar",
        "group_by": "industry",
        "metric": {
          "operation": "sum",
          "field": "impact",
          "label": "Total impact"
        },
        "allowed_roles": ["admin"],
        "missing_label": "Undefined",
        "chart_options": {
          "scales": {
            "y": {
              "beginAtZero": true
            }
          }
        }
      }
    ]
  }
}
