{
  "import": {
    "default_missing_value": "Not specified",
    "fields": {
      "title": {
        "column": "Use case name",
        "required": true,
        "default": "Untitled use case"
      },
      "industry": {
        "column": "Score Type",
        "default": "Not scored",
        "label": "Score type"
      },
      "requestor": {
        "column": "Use Case Owner / Requestor (if Client)",
        "default": "Not specified",
        "label": "Use case owner / requestor"
      },
      "summary": {
        "column": "Description",
        "default": "Not specified",
        "label": "Description"
      },
      "problem": {
        "column": "Problem Statement",
        "default": "Not specified",
        "label": "Problem statement"
      },
      "solution": {
        "column": "Solution description",
        "default": "Not specified",
        "label": "Solution description"
      },
      "impact": {
        "column": "Estimated benefit (annualized, general)",
        "default": "Not specified",
        "label": "Estimated benefit"
      },
      "data_source": {
        "column": "How was potential determined?",
        "default": "Not specified",
        "label": "Potential estimation approach"
      },
      "status_color": {
        "column": "Status Color",
        "default": "Not specified",
        "label": "Status"
      },
      "tags": {
        "default": ""
      }
    }
  },
  "access_control": {
    "roles": {
      "admin": {
        "visible_fields": [
          "*"
        ]
      },
      "reader": {
        "visible_fields": [
          "title",
          "industry",
          "requestor",
          "summary",
          "problem",
          "solution",
          "impact",
          "data_source",
          "status_color"
        ]
      }
    },
    "ownership": {
      "full_access": true,
      "additional_fields": []
    }
  },
  "visualizations": {
    "graphs": [
      {
        "id": "use-cases-by-score-type",
        "title": "Use cases by score type",
        "description": "Count of use cases per score type classification.",
        "type": "donut",
        "group_by": "industry",
        "metric": {
          "operation": "count",
          "label": "Use case count"
        },
        "allowed_roles": [
          "admin",
          "reader"
        ],
        "missing_label": "Not specified"
      },
      {
        "id": "use-cases-by-status",
        "title": "Pipeline distribution by status",
        "description": "How many initiatives sit in each status color.",
        "type": "bar",
        "group_by": "status_color",
        "metric": {
          "operation": "count",
          "label": "Use case count"
        },
        "allowed_roles": [
          "admin",
          "reader"
        ],
        "missing_label": "Not specified",
        "chart_options": {
          "scales": {
            "y": {
              "beginAtZero": true
            }
          }
        }
      },
      {
        "id": "benefit-by-score-type",
        "title": "Estimated benefit by score type",
        "description": "Sum of estimated annualised benefits, grouped by score type.",
        "type": "bar",
        "group_by": "industry",
        "metric": {
          "operation": "sum",
          "field": "impact",
          "label": "Estimated benefit"
        },
        "allowed_roles": [
          "admin"
        ],
        "missing_label": "Not specified",
        "chart_options": {
          "scales": {
            "y": {
              "beginAtZero": true
            }
          }
        }
      }
    ]
  }
}
